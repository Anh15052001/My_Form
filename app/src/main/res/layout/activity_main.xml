<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4E455"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHIẾU KHẢO SÁT THÔNG TIN"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#B80E0E"
        android:layout_marginTop="5dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Mã số sinh viên ?"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Nhập vào MSSV"
                android:id="@+id/MSSV"
                android:minHeight="48dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="53dp"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Họ và tên ?"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#000"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Nhập vào họ và tên"
                android:id="@+id/name"
                android:minHeight="48dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text=" Số CCCD ?"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Nhập vào CCCD"
                android:id="@+id/valid"
                android:minHeight="48dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="53dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Số điện thoại ?"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="15sp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Nhập vào SĐT"
                android:id="@+id/phone"
                android:minHeight="48dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=" Ngày/tháng/NămSinh"
              android:textStyle="bold"
              android:textSize="15sp"
              android:textColor="#000"
              android:drawableRight="@drawable/ic_action_add"
              android:layout_marginTop="5dp"
              android:id="@+id/calendar"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="DD/MM/YYYY"
              android:id="@+id/date_time"
              android:textSize="17sp"
              />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Quê quán ?"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Nhập vào quê quán"
                android:id="@+id/hometown"
                android:minHeight="48dp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Địa chỉ email ?"
        android:textSize="15sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập vào email"
        android:id="@+id/email"
        android:minHeight="48dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Nơi ở hiện tại ?"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#000"
        android:layout_marginTop="5dp"
        />

    <EditText
        android:id="@+id/place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập vào nơi ở hiện tại"
        android:minHeight="48dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Ngành học hiện tại"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="5dp"

        />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khoa học máy tính"
            android:id="@+id/rb1"

            >
        </RadioButton>
        <RadioButton
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kĩ thuật máy tính"
            android:id="@+id/rb2"
            >
        </RadioButton>
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Ngôn ngữ lập trình ?"
        android:textSize="15sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:id="@+id/cb1"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java"
            android:layout_marginLeft="20dp"
            android:id="@+id/cb2"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Python"
            android:layout_marginLeft="20dp"
            android:id="@+id/cb3"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Javascript"
            android:layout_marginLeft="20dp"
            android:id="@+id/cb4"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Đồng ý điều khoản"
               android:id="@+id/rbforce"
               android:textStyle="bold"
               />
        <Button
               android:layout_marginLeft="50dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="OK"
               android:backgroundTint="#0F2AC1"
               android:textStyle="bold"
               android:id="@+id/btnCheck"
            />
    </LinearLayout>



</LinearLayout>

